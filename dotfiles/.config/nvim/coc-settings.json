{
  "diagnostic.messageDelay": 50,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.enableSign": true,
  "diagnostic.checkCurrentLine": false,
  "diagnostic.errorSign": "✗",
  "diagnostic.infoSign": "i",
  "diagnostic.locationlistUpdate": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.virtualTextPrefix": "   ‣ ",
  "diagnostic.messageTarget": "float",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  // Snippets
  "snippets.priority": 100,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "snippets.snipmate.enable": false,
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.extends": { "vue": ["typescript"] },
  "snippets.loadFromExtensions": false,
  // Python
  "python.analysis.diagnosticEnabled": true,
  "python.analysis.diagnosticPublishDelay": 100,
  "python.analysis.downloadChannel": "stable",
  "diagnostic.displayByAle": false,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": false,
  "python.formatting.provider": "black",
  "python.terminal.activateEnvironment": false,
  "python.disableInstallationCheck": true,
  // Frontend:
  "tailwindCSS.headwind.removeDuplicates": true,
  "tailwindCSS.headwind.runOnSave": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.headwind.defaultSortOrder": [],
  "vetur.validation.template": true,
  "vetur.validation.templateProps": true,
  "vetur.validation.script": false,  // waiting for better vue3 support
  "prettier.eslintIntegration": true,
  "prettier.disableSuccessMessage": true,
  "tsserver.enable": true,
  "eslint.quiet": false,
  "eslint.packageManager": "npm",
  "tslint.enable": true,
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "tslint.autoFixOnSave": false
}
