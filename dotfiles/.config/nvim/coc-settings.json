{
  // Config references:
  // https://github.com/neoclide/coc.nvim/blob/master/data/schema.json
  //
  // Example config:
  // https://github.com/theniceboy/nvim/blob/master/coc-settings.json
  //
  // General
  //
  // Icon
  "suggest.completionItemKindLabels": {
    "class": "   (Class)",
    "color": "   (Color)",
    "constant": " ﲀ  (Constant)",
    "default": "\uf29c",
    "enum": " 練 (Enum)",
    "enumMember": " 練 (enum)",
    "event": "   (Event)",
    "field": " ﴲ  (Field)",
    "file": "   (File)",
    "folder": "   (Folder)",
    "function": "   (Function)",
    "interface": " ﰮ  (Interface)",
    "keyword": "   (Keyword)",
    "method": "   (Method)",
    "module": "   (Module)",
    "operator": "   (Operator)",
    "property": " 襁 (Property)",
    "reference": "   (Reference)",
    "snippet": "   (Snippet)",
    "struct": " ﳤ  (Struct)",
    "text": "   (Text) ",
    "typeParameter": "   (TypeParameter)",
    "unit": "   (Unit)",
    "value": "   (Value)",
    "variable": "[] (Variable)"
  },
  // Diagnostics
  "diagnostic.displayByAle": true,
  "diagnostic.messageDelay": 200,
  "diagnostic.messageTarget": "float",
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableSign": true,
  "diagnostic.hintSign": "‣",
  "diagnostic.infoSign": "i",
  "diagnostic.warningSign": "⚠",
  "diagnostic.errorSign": "✗",
  "diagnostic.locationlistUpdate": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": true,
  "diagnostic.virtualTextPrefix": "   ‣ ",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  // Snippets
  "snippets.priority": 100,
  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
  "snippets.snipmate.enable": false,
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.extends": { "vue": ["typescript"] },
  "snippets.loadFromExtensions": false,
  // Python
  "python.analysis.autoImportCompletions": true,
  "python.formatting.provider": "black",
  "python.sortImports.path": "isort",
  "python.sortImports.args": ["--profile", "black"],
  "python.linting.lintOnSave": false,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "pyright.organizeimports.provider": "isort",
  // "pyright.disableDiagnostics": true,
  "pyright.trace.server": "off",
  "python.analysis.logLevel": "Warning",
  // Frontend:
  "tailwindCSS.headwind.removeDuplicates": true,
  "tailwindCSS.headwind.runOnSave": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.headwind.defaultSortOrder": [],
  "vetur.validation.template": true,
  "vetur.validation.templateProps": true,
  "vetur.validation.script": true, // waiting for better vue3 support
  "prettier.eslintIntegration": true,
  "prettier.disableSuccessMessage": true,
  "tsserver.enable": true,
  "tsserver.log": "verbose",
  "eslint.quiet": false,
  "eslint.packageManager": "npm",
  "tslint.enable": false,
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "tslint.autoFixOnSave": false,
  // yaml:
  "yaml.format.proseWrap": "never",
  // lua:
  "Lua.diagnostics.globals": ["vim"]
}
